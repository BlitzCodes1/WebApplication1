                        </blockquote>
                        <p class="testimonial-name">&mdash; Hannah Smith</p>
                    </figure>
                </div>
            </div>

            <div class="gallery">
                <figure class="gallery-item">
                    <div class="gallery-img-placeholder"></div>
                </figure>
                <figure class="gallery-item">
                    <div class="gallery-img-placeholder"></div>
                </figure>
                <figure class="gallery-item">
                    <div class="gallery-img-placeholder"></div>
                </figure>
                <figure class="gallery-item">
