@page
@model IndexModel
@{
    ViewData["Title"] = "Restaurant Users";
}


<div class="container">
   

    <div class="form-container">
        <h2>Login</h2>
        <form method="post" >
         
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
               <div class="form-group">
                <label for="name">Password:</label>
                <input type="text" id="name" name="password" required>
            </div>
            
            <button type="submit" class="btn">Login</button>
            <a asp-page = "/mainPage"> go to main page </a>
        </form>
         <p>you don't have an account ? <a asp-page="/Create">Create one</a></p>
         <p style ="color : red ;">@TempData["ErrorMessage"]</p>
    </div>

   

    <div class="table-container">  
    </div>
</div>